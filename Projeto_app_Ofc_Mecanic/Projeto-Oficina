      "source": [
        "import sqlite3\n",
        "import json\n",
        "import hashlib\n",
        "\n",
        "def conectar():\n",
        "    \"\"\"Função para conectar ao banco de dados.\"\"\"\n",
        "    return sqlite3.connect('oficina_mecanica.db')\n",
        "\n",
        "def registar_colaborador(nome, cargo, especializacoes, email, telefone, endereco, experiencia, nivel, permissoes_admin):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "\n",
        "    senha_padrao = hashlib.sha256(f\"{nome}123\".encode()).hexdigest()\n",
        "    especializacoes_json = json.dumps(especializacoes)\n",
        "    permissoes_json = json.dumps(permissoes_admin)\n",
        "\n",
        "    try:\n",
        "        cursor.execute('''\n",
        "            INSERT INTO usuarios (\n",
        "                nome, cargo, especializacoes, email, telefone, endereco,\n",
        "                anos_experiencia, senha_hash, nivel_acesso, permissoes_json\n",
        "            ) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?)\n",
        "        ''', (nome, cargo, especializacoes_json, email, telefone, endereco,\n",
        "              experiencia, senha_padrao, nivel, permissoes_json))\n",
        "\n",
        "        conn.commit()\n",
        "        print(f\"✅ Colaborador {nome} registado com sucesso como {nivel}!\")\n",
        "        return cursor.lastrowid # Return the ID of the newly inserted user\n",
        "    except sqlite3.IntegrityError:\n",
        "        print(f\"❌ Erro: Este email '{email}' já está registado no sistema. Recuperando ID existente.\")\n",
        "        cursor.execute(\"SELECT id FROM usuarios WHERE email = ?\", (email,))\n",
        "        return cursor.fetchone()[0]\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "def verificar_servico(id_servico):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    cursor.execute(\"SELECT * FROM servicos WHERE id = ?\", (id_servico,))\n",
        "    result = cursor.fetchone()\n",
        "    conn.close()\n",
        "    if result:\n",
        "        print(f\"Detalhes do Serviço {id_servico}: {result}\")\n",
        "        return result\n",
        "    else:\n",
        "        print(f\"Serviço com ID {id_servico} não encontrado.\")\n",
        "        return None\n",
        "\n",
        "\n",
        "# --- Configurações para o Administrador --- #\n",
        "minhas_especializacoes_admin = [\"Gestão\", \"Finanças\", \"Operações\"]\n",
        "caixas_limitacao_admin = {\n",
        "    \"pode_dispensar_nf\": True, # Admin pode dispensar NF\n",
        "    \"ver_lucro_empresa\": True, # Admin pode ver lucro total\n",
        "    \"editar_estoque\": True,\n",
        "    \"modificar_logo\": True\n",
        "}\n",
        "\n",
        "# 1. Registrar um Administrador (ou obter ID se já existir)\n",
        "id_admin_maria = registar_colaborador(\n",
        "    nome=\"Maria Admin\",\n",
        "    cargo=\"Administrador Geral\",\n",
        "    especializacoes=minhas_especializacoes_admin,\n",
        "    email=\"maria.admin@oficina.com\",\n",
        "    telefone=\"998765432\",\n",
        "    endereco=\"Avenida Central, 50, Centro\",\n",
        "    experiencia=20,\n",
        "    nivel=\"Admin\",\n",
        "    permissoes_admin=caixas_limitacao_admin\n",
        ")\n",
        "\n",
        "# Reutilizando id_servico_exemplo do kernel\n",
        "# id_servico_exemplo = 1 # Supondo que este ID foi gerado na célula anterior\n",
        "\n",
        "# 2. Administrador Maria aprova as peças para o serviço sugerido pelo mecânico João\n",
        "print(f\"\\n--- Processando solicitação de peças para o Serviço ID: {id_servico_exemplo} pelo Admin ID: {id_admin_maria} ---\")\n",
        "\n",
        "# Peças que o administrador decide aprovar (pode ser diferente das sugeridas)\n",
        "pecas_a_aprovar_admin = [\n",
        "    {'peca': 'Amortecedor Dianteiro', 'quantidade': 2},\n",
        "    {'peca': 'Kit Batente e Coifa', 'quantidade': 2},\n",
        "    {'peca': 'Pneu Aro 16', 'quantidade': 2} # Admin adicionou pneus\n",
        "]\n",
        "\n",
        "if id_servico_exemplo and id_admin_maria:\n",
        "    sucesso_aprovacao = aprovar_rejeitar_pecas_admin(\n",
        "        id_servico=id_servico_exemplo,\n",
        "        id_admin=id_admin_maria,\n",
        "        status='Aprovado',\n",
        "        pecas_aprovadas=pecas_a_aprovar_admin\n",
        "    )\n",
        "\n",
        "    if sucesso_aprovacao:\n",
        "        print(\"\\n--- Verificando o serviço após aprovação de peças pelo Admin ---\")\n",
        "        verificar_servico(id_servico_exemplo)\n",
        "\n",
