      "cell_type": "code",
      "source": [
        "import sqlite3\n",
        "import hashlib\n",
        "import json # Para guardar as especializações como uma lista sem limite\n",
        "\n",
        "def conectar():\n",
        "    return sqlite3.connect('oficina_mecanica.db')\n",
        "\n",
        "def registar_colaborador(nome, cargo, especializacoes, email, telefone, endereco, experiencia, nivel, permissoes_admin):\n",
        "    \"\"\"\n",
        "    Função para o Administrador cadastrar novos funcionários.\n",
        "    'especializacoes' deve ser uma lista de strings.\n",
        "    'permissoes_admin' é um dicionário com as caixas de marcação.\n",
        "    \"\"\"\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "\n",
        "    # Gerar uma senha padrão inicial (ex: Nome123) que o sistema pedirá para mudar\n",
        "    senha_padrao = hashlib.sha256(f\"{nome}123\".encode()).hexdigest()\n",
        "\n",
        "    # Transformar a lista de especializações e permissões em JSON (texto ilimitado)\n",
        "    especializacoes_json = json.dumps(especializacoes)\n",
        "    permissoes_json = json.dumps(permissoes_admin)\n",
        "\n",
        "    try:\n",
        "        cursor.execute('''\n",
        "            INSERT INTO usuarios (\n",
        "                nome, cargo, especializacoes, email, telefone, endereco,\n",
        "                anos_experiencia, senha_hash, nivel_acesso, permissoes_json\n",
        "            ) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?)\n",
        "        ''', (nome, cargo, especializacoes_json, email, telefone, endereco,\n",
        "              experiencia, senha_padrao, nivel, permissoes_json))\n",
        "\n",
        "        conn.commit()\n",
        "        print(f\"✅ Colaborador {nome} registado com sucesso como {nivel}!\")\n",
        "    except sqlite3.IntegrityError:\n",
        "        print(\"❌ Erro: Este email já está registado no sistema.\")\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "# --- EXEMPLO DE USO PELO ADMINISTRADOR ---\n",
        "\n",
        "# 1. Definir especializações (Simulando o clique no botão \"+\")\n",
        "minhas_especializacoes = [\"Injeção Eletrónica\", \"Suspensão\", \"Motores de Alta Performance\"]\n",
        "\n",
        "# 2. Definir as \"Caixas de Limitação\" (O que o Administrador marca/desmarca)\n",
        "caixas_limitacao = {\n",
        "    \"pode_dispensar_nf\": False,    # Sua regra de 'contra tempo'\n",
        "    \"ver_lucro_empresa\": False,    # Mecânico não vê o total\n",
        "    \"editar_estoque\": True,        # Pode dar baixa em peças\n",
        "    \"modificar_logo\": False        # Apenas pessoas de confiança\n",
        "}\n",
        "\n",
        "# 3. Executar o registo\n",
        "registar_colaborador(\n",
        "    nome=\"João Silva\",\n",
        "    cargo=\"Mecânico Sénior\",\n",
        "    especializacoes=minhas_especializacoes,\n",
        "    email=\"joao@oficina.com\",\n",
        "    telefone=\"912345678\",\n",
        "    endereco=\"Rua Principal, 123, Bairro Industrial\",\n",
        "    experiencia=12,\n",
        "    nivel=\"Mecanico\",\n",
        "    permissoes_admin=caixas_limitacao\n",
        ")"
      ],
      "metadata": {
        "colab": {
