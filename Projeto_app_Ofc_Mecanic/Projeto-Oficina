      "source": [
        "import sqlite3\n",
        "import json\n",
        "\n",
        "def conectar():\n",
        "    \"\"\"Função para conectar ao banco de dados.\"\"\"\n",
        "    return sqlite3.connect('oficina_mecanica.db')\n",
        "\n",
        "def atualizar_permissoes_colaborador(id_usuario, novas_permissoes):\n",
        "    \"\"\"Atualiza o campo permissoes_json para um colaborador existente.\n",
        "\n",
        "    Args:\n",
        "        id_usuario (int): O ID do usuário a ser atualizado.\n",
        "        novas_permissoes (dict): O novo dicionário de permissões.\n",
        "    \"\"\"\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    try:\n",
        "        permissoes_json_str = json.dumps(novas_permissoes)\n",
        "        cursor.execute(\"UPDATE usuarios SET permissoes_json = ? WHERE id = ?\", (permissoes_json_str, id_usuario))\n",
        "        conn.commit()\n",
        "        print(f\"✅ Permissões para o usuário ID {id_usuario} atualizadas com sucesso.\")\n",
        "        return True\n",
        "    except sqlite3.Error as e:\n",
        "        print(f\"❌ Erro ao atualizar permissões para o usuário ID {id_usuario}: {e}\")\n",
        "        return False\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "def verificar_comissao_mecanico(id_mecanico):\n",
        "    \"\"\"\n",
        "    Verifica e retorna a porcentagem de comissão configurada para o mecânico.\n",
        "    Prioriza a comissão global em permissoes_json, caso contrário, retorna a média das comissões de serviços.\n",
        "\n",
        "    Args:\n",
        "        id_mecanico (int): O ID do mecânico.\n",
        "\n",
        "    Returns:\n",
        "        float or None: A porcentagem de comissão, ou None se não for encontrada.\n",
        "    \"\"\"\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    try:\n",
        "        # 1. Tentar obter comissão global do permissoes_json na tabela usuarios\n",
        "        cursor.execute(\"SELECT permissoes_json FROM usuarios WHERE id = ?\", (id_mecanico,))\n",
        "        resultado_usuario = cursor.fetchone()\n",
        "\n",
        "        if resultado_usuario and resultado_usuario[0]:\n",
        "            permissoes = json.loads(resultado_usuario[0])\n",
        "            if 'comissao_percentual' in permissoes:\n",
        "                comissao_global = permissoes['comissao_percentual']\n",
        "                print(f\"ℹ️ Comissão global configurada para o mecânico ID {id_mecanico}: {comissao_global}%\")\n",
        "                return comissao_global\n",
        "\n",
        "        # 2. Se não houver comissão global, tentar obter a média dos serviços atribuídos\n",
        "        cursor.execute(\"SELECT comissao_mecanico_porcentagem FROM servicos WHERE id_mecanico = ?\", (id_mecanico,))\n",
        "        comissoes_servicos = cursor.fetchall()\n",
        "\n",
        "        if comissoes_servicos:\n",
        "            # Filtrar e calcular a média, se houver comissões diferentes de 0\n",
        "            comissoes_validas = [c[0] for c in comissoes_servicos if c[0] > 0]\n",
        "            if comissoes_validas:\n",
        "                comissao_media = sum(comissoes_validas) / len(comissoes_validas)\n",
        "                print(f\"ℹ️ Comissão média dos serviços para o mecânico ID {id_mecanico}: {comissao_media}%\")\n",
        "                return comissao_media\n",
        "            else:\n",
        "                print(f\"⚠️ Nenhuma comissão configurada para o mecânico ID {id_mecanico} (0% em todos os serviços). Nenhuma comissão global encontrada.\")\n",
        "                return 0.0 # Retorna 0 se todas as comissões de serviço forem 0\n",
        "        else:\n",
        "            print(f\"⚠️ Nenhuma comissão configurada para o mecânico ID {id_mecanico} (nenhum serviço encontrado e nenhuma comissão global).\")\n",
        "            return None\n",
        "\n",
        "    except sqlite3.Error as e:\n",
        "        print(f\"❌ Erro ao verificar comissão do mecânico: {e}\")\n",
        "        return None\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "print(\"Função 'verificar_comissao_mecanico' e 'atualizar_permissoes_colaborador' criadas com sucesso.\")\n",
        "\n",
        "\n",
        "# --- Atualizar as permissões de João Silva para incluir a comissão --- #\n",
        "# Reusing id_mecanico_joao from previous execution\n",
        "# id_mecanico_joao = 1\n",
        "\n",
        "# Obtendo as permissões atuais de João Silva para adicionar a comissão\n",
        "conn = conectar()\n",
        "cursor = conn.cursor()\n",
        "cursor.execute(\"SELECT permissoes_json FROM usuarios WHERE id = ?\", (id_mecanico_joao,))\n",
        "current_permissions_json = cursor.fetchone()[0]\n",
        "conn.close()\n",
        "\n",
        "current_permissions = json.loads(current_permissions_json)\n",
        "current_permissions['comissao_percentual'] = 15.0 # Definindo uma comissão padrão para João Silva\n",
        "\n",
        "atualizar_permissoes_colaborador(id_mecanico_joao, current_permissions)\n",
        "\n",
        "# --- Exibir a comissão de João Silva --- #\n",
        "print(f\"\\n--- Verificando comissão para o mecânico João Silva (ID: {id_mecanico_joao}) ---\")\n",
        "comissao_joao = verificar_comissao_mecanico(id_mecanico_joao)\n",
        "\n",
        "if comissao_joao is not None:\n",
        "    print(f\"Comissão de João Silva: {comissao_joao}%\")\n",
        "else:\n",
        "    print(\"Não foi possível determinar a comissão de João Silva.\")"
      ],
      "execution_count": 14,
      "outputs": [
        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
            "Função 'verificar_comissao_mecanico' e 'atualizar_permissoes_colaborador' criadas com sucesso.\n",
            "✅ Permissões para o usuário ID 1 atualizadas com sucesso.\n",
            "\n",
            "--- Verificando comissão para o mecânico João Silva (ID: 1) ---\n",
            "ℹ️ Comissão global configurada para o mecânico ID 1: 15.0%\n",
            "Comissão de João Silva: 15.0%\n"
