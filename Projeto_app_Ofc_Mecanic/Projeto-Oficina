      "source": [
        "import sqlite3\n",
        "import json\n",
        "import hashlib\n",
        "\n",
        "def conectar():\n",
        "    return sqlite3.connect('oficina_mecanica.db')\n",
        "\n",
        "def registar_colaborador(nome, cargo, especializacoes, email, telefone, endereco, experiencia, nivel, permissoes_admin):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "\n",
        "    senha_padrao = hashlib.sha256(f\"{nome}123\".encode()).hexdigest()\n",
        "    especializacoes_json = json.dumps(especializacoes)\n",
        "    permissoes_json = json.dumps(permissoes_admin)\n",
        "\n",
        "    try:\n",
        "        cursor.execute('''\n",
        "            INSERT INTO usuarios (\n",
        "                nome, cargo, especializacoes, email, telefone, endereco,\n",
        "                anos_experiencia, senha_hash, nivel_acesso, permissoes_json\n",
        "            ) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?)\n",
        "        ''', (nome, cargo, especializacoes_json, email, telefone, endereco,\n",
        "              experiencia, senha_padrao, nivel, permissoes_json))\n",
        "\n",
        "        conn.commit()\n",
        "        print(f\"✅ Colaborador {nome} registado com sucesso como {nivel}!\")\n",
        "        return cursor.lastrowid # Return the ID of the newly inserted user\n",
        "    except sqlite3.IntegrityError:\n",
        "        print(\"❌ Erro: Este email já está registado no sistema.\")\n",
        "        # If user already exists, retrieve their ID\n",
        "        cursor.execute(\"SELECT id FROM usuarios WHERE email = ?\", (email,))\n",
        "        return cursor.fetchone()[0]\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "def registar_servico(carro_modelo, carro_placa, carro_ano, descricao_problema, id_mecanico):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    try:\n",
        "        cursor.execute('''\n",
        "            INSERT INTO servicos (\n",
        "                carro_modelo, carro_placa, carro_ano, descricao_problema, id_mecanico,\n",
        "                status_conserto, nf_obrigatoria, pecas_utilizadas, valor_total,\n",
        "                comissao_mecanico_porcentagem, pecas_sugeridas_mecanico, pecas_aprovadas_admin,\n",
        "                status_solicitacao_pecas\n",
        "            ) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)\n",
        "        ''', (\n",
        "            carro_modelo, carro_placa, carro_ano, descricao_problema, id_mecanico,\n",
        "            'Pendente', 1, json.dumps([]), 0.0, 0.0, json.dumps({}), json.dumps({}), 'Pendente'\n",
        "        ))\n",
        "        conn.commit()\n",
        "        print(f\"✅ Serviço para o veículo {carro_placa} registado com sucesso para o mecânico {id_mecanico}!\")\n",
        "        return cursor.lastrowid\n",
        "    except sqlite3.Error as e:\n",
        "        print(f\"❌ Erro ao registar serviço: {e}\")\n",
        "        return None\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "def get_user_id_by_name(nome):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    cursor.execute(\"SELECT id FROM usuarios WHERE nome = ?\", (nome,))\n",
        "    result = cursor.fetchone()\n",
        "    conn.close()\n",
        "    return result[0] if result else None\n",
        "\n",
        "def verificar_servico(id_servico):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    cursor.execute(\"SELECT * FROM servicos WHERE id = ?\", (id_servico,))\n",
        "    result = cursor.fetchone()\n",
        "    conn.close()\n",
        "    if result:\n",
        "        print(f\"Detalhes do Serviço {id_servico}: {result}\")\n",
        "        return result\n",
        "    else:\n",
        "        print(f\"Serviço com ID {id_servico} não encontrado.\")\n",
        "        return None\n",
        "\n",
        "\n",
        "# --- Configurações para o Mecânico --- #\n",
        "minhas_especializacoes_mecanico = [\"Injeção Eletrónica\", \"Suspensão\"]\n",
        "caixas_limitacao_mecanico = {\n",
        "    \"pode_dispensar_nf\": False,\n",
        "    \"ver_lucro_empresa\": False,\n",
        "    \"editar_estoque\": True,\n",
        "    \"modificar_logo\": False\n",
        "}\n",
        "\n",
        "# 1. Registrar um mecânico (se não existir, o ID será retornado ou criado)\n",
        "id_mecanico_joao = registar_colaborador(\n",
        "    nome=\"João Silva\",\n",
        "    cargo=\"Mecânico Sénior\",\n",
        "    especializacoes=minhas_especializacoes_mecanico,\n",
        "    email=\"joao@oficina.com\",\n",
        "    telefone=\"912345678\",\n",
        "    endereco=\"Rua Principal, 123, Bairro Industrial\",\n",
        "    experiencia=12,\n",
        "    nivel=\"Mecanico\",\n",
        "    permissoes_admin=caixas_limitacao_mecanico\n",
        ")\n",
        "\n",
        "# 2. Registrar um serviço atribuído ao mecânico João Silva\n",
        "id_servico_exemplo = registar_servico(\n",
        "    carro_modelo=\"Ford Focus\",\n",
        "    carro_placa=\"AA-12-BB\",\n",
        "    carro_ano=\"2018\",\n",
        "    descricao_problema=\"Barulho na suspensão dianteira\",\n",
        "    id_mecanico=id_mecanico_joao\n",
        ")\n",
        "\n",
        "# 3. Mecânico João Silva sugere peças para o serviço\n",
        "pecas_sugeridas_joao = [\n",
        "    {'peca': 'Amortecedor Dianteiro', 'quantidade': 2},\n",
        "    {'peca': 'Kit Batente e Coifa', 'quantidade': 2}\n",
        "]\n",
        "\n",
        "if id_servico_exemplo and id_mecanico_joao:\n",
        "    print(f\"\\n--- Sugerindo peças para o Serviço ID: {id_servico_exemplo} pelo Mecânico ID: {id_mecanico_joao} ---\")\n",
        "    sucesso = sugerir_pecas_mecanico(\n",
        "        id_servico=id_servico_exemplo,\n",
        "        id_mecanico=id_mecanico_joao,\n",
        "        pecas_sugeridas=pecas_sugeridas_joao\n",
        "    )\n",
        "    if sucesso:\n",
        "        print(\"\\n--- Verificando o serviço após a sugestão de peças ---\")\n",
        "        verificar_servico(id_servico_exemplo)\n",
        "    else:\n",
        "        print(\"\\n--- A sugestão de peças falhou. ---\")\n",
        "else:\n",
        "    print(\"Não foi possível registrar o mecânico ou o serviço para continuar.\")\n"
      ],
      "execution_count": 9,
      "outputs": [
        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
