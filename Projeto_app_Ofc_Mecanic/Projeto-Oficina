        "                            print(f\"    - {peca['peca']} (Qtd: {peca['quantidade']}), Marcas Sugeridas: {marcas_sugeridas}\")\n",
        "                    else:\n",
        "                        print(\"    Nenhuma peça sugerida.\")\n",
        "                    print(\"--------------------------------------------------\")\n",
        "        else:\n",
        "            print(\"Nenhuma solicitação de peças pendente para o Administrador visualizar.\")\n",
        "\n",
        "        # 7. O administrador aprova as peças, define o valor total do serviço e a porcentagem de comissão.\n",
        "        print(f\"\\n--- Administrador {id_admin_maria} aprova peças, define valor e comissão para a Ordem de Serviço ID: {id_servico_demonstracao} ---\")\n",
        "\n",
        "        pecas_aprovadas_para_demonstracao_final = [\n",
        "            {'peca': 'Pastilha de Freio Dianteira', 'quantidade': 1, 'marca_aprovada': 'Bosch'},\n",
        "            {'peca': 'Filtro de Óleo', 'quantidade': 1, 'marca_aprovada': 'Mann Filter'},\n",
        "            {'peca': 'Óleo de Motor 5W-40', 'quantidade': 4, 'marca_aprovada': 'Castrol'}\n",
        "        ]\n",
        "        valor_servico_final = 850.00\n",
        "        comissao_percentual_final = 15.0\n",
        "\n",
