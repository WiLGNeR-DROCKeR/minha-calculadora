        "import sqlite3\n",
        "import json\n",
        "import hashlib\n",
        "\n",
        "def conectar():\n",
        "    \"\"\"Função para conectar ao banco de dados.\"\"\"\n",
        "    return sqlite3.connect('oficina_mecanica.db')\n",
        "\n",
        "def registar_colaborador(nome, cargo, especializacoes, email, telefone, endereco, experiencia, nivel, permissoes_admin):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "\n",
        "    senha_padrao = hashlib.sha256(f\"{nome}123\".encode()).hexdigest()\n",
        "    especializacoes_json = json.dumps(especializacoes)\n",
        "    permissoes_json = json.dumps(permissoes_admin)\n",
        "\n",
        "    try:\n",
        "        cursor.execute('''\n",
        "            INSERT INTO usuarios (\n",
        "                nome, cargo, especializacoes, email, telefone, endereco,\n",
        "                anos_experiencia, senha_hash, nivel_acesso, permissoes_json\n",
        "            ) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?)\n",
        "        ''', (nome, cargo, especializacoes_json, email, telefone, endereco,\n",
        "              experiencia, senha_padrao, nivel, permissoes_json))\n",
        "\n",
        "        conn.commit()\n",
        "        print(f\"✅ Colaborador {nome} registado com sucesso como {nivel}!\")\n",
        "        return cursor.lastrowid # Return the ID of the newly inserted user\n",
        "    except sqlite3.IntegrityError:\n",
        "        print(f\"❌ Erro: Este email '{email}' já está registado no sistema. Recuperando ID existente.\")\n",
        "        cursor.execute(\"SELECT id FROM usuarios WHERE email = ?\", (email,))\n",
        "        return cursor.fetchone()[0]\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "def registar_servico(carro_modelo, carro_placa, carro_ano, descricao_problema, id_mecanico):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    try:\n",
        "        cursor.execute('''\n",
        "            INSERT INTO servicos (\n",
        "                carro_modelo, carro_placa, carro_ano, descricao_problema, id_mecanico,\n",
