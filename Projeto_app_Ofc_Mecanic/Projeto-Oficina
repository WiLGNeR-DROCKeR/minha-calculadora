      "cell_type": "code",
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "b8d4e250",
        "outputId": "41309169-da98-4cd8-eeec-df5429e3d2f4"
      },
      "source": [
        "import sqlite3\n",
        "import json\n",
        "\n",
        "def conectar():\n",
        "    \"\"\"Função para conectar ao banco de dados.\"\"\"\n",
        "    return sqlite3.connect('oficina_mecanica.db')\n",
        "\n",
        "def aprovar_rejeitar_pecas_admin(id_servico, id_admin, status, pecas_aprovadas=None):\n",
        "    \"\"\"\n",
        "    Permite ao administrador visualizar, aprovar ou rejeitar as solicitações de peças sugeridas.\n",
        "\n",
        "    Args:\n",
        "        id_servico (int): O ID do serviço.\n",
        "        id_admin (int): O ID do usuário que está realizando a ação (deve ser um Admin).\n",
        "        status (str): 'Aprovado' ou 'Rejeitado'.\n",
        "        pecas_aprovadas (list, optional): Uma lista de dicionários com 'peca', 'quantidade' e 'marca_aprovada',\n",
        "                                         apenas se o status for 'Aprovado'.\n",
        "                                         Ex: [{'peca': 'Amortecedor Dianteiro', 'quantidade': 2, 'marca_aprovada': 'Cofap'}]\n",
        "    \"\"\"\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "\n",
        "    try:\n",
        "        # 1. Verificar se o id_admin pertence a um usuário com nivel_acesso de 'Admin'\n",
        "        cursor.execute(\"SELECT nivel_acesso FROM usuarios WHERE id = ?\", (id_admin,))\n",
        "        admin_nivel_acesso = cursor.fetchone()\n",
        "\n",
        "        if not admin_nivel_acesso or admin_nivel_acesso[0] != 'Admin':\n",
        "            print(f\"❌ Erro: Usuário com ID {id_admin} não tem permissão de Administrador para esta ação.\")\n",
        "            return False\n",
        "\n",
        "        # 2. Obter as pecas_sugeridas_mecanico para o id_servico\n",
        "        cursor.execute(\"SELECT pecas_sugeridas_mecanico, status_solicitacao_pecas FROM servicos WHERE id = ?\", (id_servico,))\n",
        "        resultado_servico = cursor.fetchone()\n",
        "\n",
        "        if not resultado_servico:\n",
        "            print(f\"❌ Erro: Serviço com ID {id_servico} não encontrado.\")\n",
        "            return False\n",
        "\n",
        "        pecas_sugeridas_json = resultado_servico[0]\n",
        "        current_status_solicitacao = resultado_servico[1]\n",
        "\n",
        "        if not pecas_sugeridas_json or pecas_sugeridas_json == '{}' or pecas_sugeridas_json == '[]':\n",
        "            print(f\"⚠️ Aviso: Não há peças sugeridas para o serviço {id_servico}.\")\n",
        "            # If there are no suggested parts, but the status is already approved/rejected, allow to proceed\n",
        "            if status == 'Aprovado' and (not pecas_aprovadas or pecas_aprovadas == '[]'):\n",
        "                print(\"❌ Erro: Não é possível aprovar peças quando nenhuma foi sugerida e nenhuma peça aprovada foi fornecida.\")\n",
        "                return False\n",
        "            elif current_status_solicitacao != 'Pendente' and status != current_status_solicitacao:\n",
        "                print(f\"⚠️ Aviso: O status da solicitação já é '{current_status_solicitacao}'. Ignorando a mudança para '{status}'.\")\n",
        "                return True # Or decide to return False if explicit change is required\n",
        "        else:\n",
        "            # Deserialize suggested parts for display\n",
        "            sugeridas_mecanico = json.loads(pecas_sugeridas_json)\n",
        "            print(f\"ℹ️ Peças sugeridas pelo mecânico para o serviço {id_servico}: {sugeridas_mecanico}\")\n",
        "\n",
        "        if status == 'Aprovado':\n",
        "            # 3. Se o status for 'Aprovado':\n",
        "            #    a. Valide que pecas_aprovadas foi fornecido e é uma lista válida.\n",
        "            if not pecas_aprovadas or not isinstance(pecas_aprovadas, list):\n",
        "                print(\"❌ Erro: 'pecas_aprovadas' deve ser uma lista não vazia para aprovação.\")\n",
        "                return False\n",
        "\n",
        "            #    b. Validar que cada item em pecas_aprovadas inclui a chave 'marca_aprovada'.\n",
        "            for peca_info in pecas_aprovadas:\n",
        "                if 'peca' not in peca_info or 'quantidade' not in peca_info or 'marca_aprovada' not in peca_info:\n",
        "                    print(f\"❌ Erro: Cada item em 'pecas_aprovadas' deve conter 'peca', 'quantidade' e 'marca_aprovada'. Item inválido: {peca_info}\")\n",
        "                    return False\n",
        "\n",
        "            #    c. Serializar a lista pecas_aprovadas para JSON.\n",
        "            pecas_aprovadas_json = json.dumps(pecas_aprovadas)\n",
        "\n",
        "            #    d. Atualizar as colunas\n",
        "            cursor.execute(\n",
        "                \"UPDATE servicos SET pecas_aprovadas_admin = ?, status_solicitacao_pecas = ? WHERE id = ?\",\n",
        "                (pecas_aprovadas_json, 'Aprovado', id_servico)\n",
        "            )\n",
        "            conn.commit()\n",
        "            print(f\"✅ Peças aprovadas para o serviço {id_servico} com sucesso. Status: Aprovado.\")\n",
        "            return True\n",
        "\n",
        "        elif status == 'Rejeitado':\n",
        "            # 4. Se o status for 'Rejeitado':\n",
        "            #    a. Atualizar apenas a coluna status_solicitacao_pecas\n",
        "            cursor.execute(\n",
        "                \"UPDATE servicos SET status_solicitacao_pecas = ? WHERE id = ?\",\n",
        "                ('Rejeitado', id_servico)\n",
        "            )\n",
        "            conn.commit()\n",
        "            print(f\"✅ Solicitação de peças para o serviço {id_servico} rejeitada com sucesso. Status: Rejeitado.\")\n",
        "            return True\n",
        "\n",
        "        else:\n",
        "            print(\"❌ Erro: O status deve ser 'Aprovado' ou 'Rejeitado'.\")\n",
        "            return False\n",
        "\n",
        "    except sqlite3.Error as e:\n",
        "        print(f\"❌ Erro ao processar solicitação de peças: {e}\")\n",
        "        return False\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "def verificar_servico(id_servico):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    cursor.execute(\"SELECT * FROM servicos WHERE id = ?\", (id_servico,))\n",
        "    result = cursor.fetchone()\n",
        "    conn.close()\n",
        "    if result:\n",
        "        print(f\"Detalhes do Serviço {id_servico}: {result}\")\n",
        "        return result\n",
        "    else:\n",
        "        print(f\"Serviço com ID {id_servico} não encontrado.\")\n",
        "        return None\n",
        "\n",
        "# 6. O administrador deve aprovar as peças para o serviço, selecionando uma marca específica para cada item.\n",
        "print(f\"\\n--- Administrador {id_admin_maria} aprova peças para o Serviço ID: {id_servico_demonstracao} ---\")\n",
        "\n",
        "pecas_aprovadas_para_demonstracao = [\n",
        "    {'peca': 'Pastilha de Freio Dianteira', 'quantidade': 1, 'marca_aprovada': 'Bosch'},\n",
        "    {'peca': 'Filtro de Óleo', 'quantidade': 1, 'marca_aprovada': 'Mann Filter'},\n",
        "    {'peca': 'Óleo de Motor 5W-40', 'quantidade': 4, 'marca_aprovada': 'Castrol'}\n",
        "]\n",
        "\n",
        "sucesso_aprovacao = aprovar_rejeitar_pecas_admin(\n",
        "    id_servico=id_servico_demonstracao,\n",
        "    id_admin=id_admin_maria,\n",
        "    status='Aprovado',\n",
        "    pecas_aprovadas=pecas_aprovadas_para_demonstracao\n",
        ")\n",
        "\n",
        "if sucesso_aprovacao:\n",
        "    # 7. Verifique o serviço aprovado para confirmar que a coluna pecas_aprovadas_admin foi atualizada.\n",
        "    print(f\"\\n--- Verificando o Serviço ID: {id_servico_demonstracao} após aprovação pelo Admin ---\")\n",
        "    verificar_servico(id_servico_demonstracao)\n",
        "else:\n",
        "    print(f\"❌ Falha na aprovação de peças para o Serviço ID: {id_servico_demonstracao}.\")"
      ],
      "execution_count": 28,
      "outputs": [
        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
            "\n",
            "--- Administrador 2 aprova peças para o Serviço ID: 1 ---\n",
            "ℹ️ Peças sugeridas pelo mecânico para o serviço 1: [{'peca': 'Pastilha de Freio Dianteira', 'quantidade': 1, 'marcas_sugeridas': ['Bosch', 'Cofap', 'TRW']}, {'peca': 'Filtro de Óleo', 'quantidade': 1, 'marcas_sugeridas': ['Mann Filter', 'Fram']}, {'peca': 'Óleo de Motor 5W-40', 'quantidade': 4, 'marcas_sugeridas': ['Castrol', 'Mobil']}]\n",
