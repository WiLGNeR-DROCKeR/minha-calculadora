      "cell_type": "code",
      "source": [
        "import hashlib\n",
        "\n",
        "# Simulação de um \"Banco de Dados\" de permissões em memória para teste\n",
        "configuracoes_permissoes = {\n",
        "    \"gerente\": {\n",
        "        \"ver_lucro_total\": False,\n",
        "        \"alterar_porcentagem_mecanico\": False,\n",
        "        \"dispensar_nota_fiscal\": False, # Sua nova solicitação\n",
        "        \"alterar_logo_sistema\": False,\n",
        "        \"ver_relatorios_entrada_saida\": True\n",
        "    },\n",
        "    \"mecanico\": {\n",
        "        \"ver_propria_comissao\": True,\n",
        "        \"ver_valor_total_servico\": False,\n",
        "        \"dispensar_nota_fiscal\": False\n",
        "    }\n",
        "}\n",
        "\n",
        "def atualizar_permissao(cargo, funcionalidade, status):\n",
        "    \"\"\"\n",
        "    Função exclusiva do Administrador para marcar/desmarcar as limitações.\n",
        "    \"\"\"\n",
        "    if cargo in configuracoes_permissoes:\n",
        "        configuracoes_permissoes[cargo][funcionalidade] = status\n",
        "        print(f\"[ADMIN] Permissão '{funcionalidade}' para {cargo} alterada para: {status}\")\n",
        "\n",
        "# --- TESTE DA SUA SOLICITAÇÃO ---\n",
        "print(\"--- Configuração Inicial de Segurança ---\")\n",
        "# O Admin decide que o Gerente AGORA pode dispensar nota fiscal em \"contra tempos\"\n",
        "atualizar_permissao(\"gerente\", \"dispensar_nota_fiscal\", True)\n",
        "\n",
        "# O Admin decide que o Gerente NÃO PODE mexer no símbolo/logo da empresa\n",
        "atualizar_permissao(\"gerente\", \"alterar_logo_sistema\", False)"
      ],
      "metadata": {
