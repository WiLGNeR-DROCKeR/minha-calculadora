      "source": [
        "import sqlite3\n",
        "import json\n",
        "\n",
        "def conectar():\n",
        "    \"\"\"Função para conectar ao banco de dados.\"\"\"\n",
        "    return sqlite3.connect('oficina_mecanica.db')\n",
        "\n",
        "def sugerir_pecas_mecanico(id_servico, id_mecanico, pecas_sugeridas):\n",
        "    \"\"\"\n",
        "    Permite ao mecânico registrar as peças sugeridas para um serviço, incluindo marcas.\n",
        "    Atualiza 'pecas_sugeridas_mecanico' e define 'status_solicitacao_pecas' como 'Pendente'.\n",
        "\n",
        "    Args:\n",
        "        id_servico (int): O ID do serviço.\n",
        "        id_mecanico (int): O ID do mecânico que está sugerindo as peças.\n",
        "        pecas_sugeridas (list): Uma lista de dicionários, onde cada dicionário representa uma peça.\n",
        "                                 Cada item deve ter as chaves 'peca', 'quantidade',\n",
        "                                 e opcionalmente 'marcas_sugeridas' (uma lista de strings).\n",
        "                                 Ex: [{'peca': 'Amortecedor Dianteiro', 'quantidade': 2, 'marcas_sugeridas': ['Cofap', 'Monroe']},\n",
        "                                      {'peca': 'Filtro de Ar', 'quantidade': 1}]\n",
        "    \"\"\"\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "\n",
        "    try:\n",
        "        cursor.execute(\"SELECT id_mecanico, status_solicitacao_pecas FROM ordens_servico WHERE id = ?\", (id_servico,))\n",
        "        resultado_servico = cursor.fetchone()\n",
        "\n",
        "        if not resultado_servico:\n",
        "            print(f\"❌ Erro: Ordem de serviço com ID {id_servico} não encontrada.\")\n",
        "            return False\n",
        "\n",
        "        mecanico_responsavel_id = resultado_servico[0]\n",
        "        current_status_solicitacao = resultado_servico[1]\n",
        "\n",
        "        if mecanico_responsavel_id != id_mecanico:\n",
        "            print(f\"❌ Erro: Mecânico com ID {id_mecanico} não é o responsável pela ordem de serviço {id_servico}.\")\n",
        "            return False\n",
        "\n",
        "        # Check if the status allows for new suggestions\n",
        "        # Mecânico pode ajustar as sugestões enquanto o status da solicitação for 'Pendente'\n",
        "        if current_status_solicitacao != 'Pendente':\n",
        "            print(f\"❌ Erro: Não é possível sugerir peças para a ordem de serviço {id_servico}. O status da solicitação é '{current_status_solicitacao}'.\")\n",
        "            return False\n",
        "\n",
        "        # Serializar a lista de peças sugeridas para JSON\n",
        "        pecas_sugeridas_json = json.dumps(pecas_sugeridas)\n",
        "\n",
        "        # Atualizar a tabela ordens_servico\n",
        "        cursor.execute(\n",
        "            \"UPDATE ordens_servico SET pecas_sugeridas_mecanico = ?, status_solicitacao_pecas = ? WHERE id = ?\",\n",
        "            (pecas_sugeridas_json, 'Pendente', id_servico)\n",
        "        )\n",
        "        conn.commit()\n",
        "        print(f\"✅ Peças sugeridas para a ordem de serviço {id_servico} registradas/atualizadas com sucesso. Status: Pendente.\")\n",
        "        return True\n",
        "\n",
        "    except sqlite3.Error as e:\n",
        "        print(f\"❌ Erro ao sugerir peças: {e}\")\n",
        "        return False\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "print(\"Função 'sugerir_pecas_mecanico' atualizada para 'ordens_servico'.\")"
      ],
      "execution_count": 38,
      "outputs": [
        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
            "Função 'sugerir_pecas_mecanico' atualizada para 'ordens_servico'.\n"
          ]
        }
      ]
