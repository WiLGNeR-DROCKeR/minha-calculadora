      "source": [
        "import sqlite3\n",
        "import json\n",
        "\n",
        "def conectar():\n",
        "    \"\"\"Função para conectar ao banco de dados.\"\"\"\n",
        "    return sqlite3.connect('oficina_mecanica.db')\n",
        "\n",
        "def get_servicos_mecanico(id_mecanico):\n",
        "    \"\"\"\n",
        "    Retorna todos os detalhes dos serviços atribuídos a um mecânico específico,\n",
        "    incluindo colunas relacionadas a peças e comissão, com detalhes de marca e valor da comissão.\n",
        "\n",
        "    Args:\n",
        "        id_mecanico (int): O ID do mecânico.\n",
        "\n",
        "    Returns:\n",
        "        list: Uma lista de dicionários, onde cada dicionário representa um serviço.\n",
        "              Retorna uma lista vazia se nenhum serviço for encontrado.\n",
        "    \"\"\"\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    try:\n",
        "        cursor.execute(\n",
        "            \"\"\"SELECT\n",
        "                id, carro_modelo, carro_placa, carro_ano, descricao_problema,\n",
        "                pecas_utilizadas, valor_total, comissao_mecanico_porcentagem,\n",
        "                status_conserto, nf_obrigatoria, pecas_sugeridas_mecanico,\n",
        "                pecas_aprovadas_admin, status_solicitacao_pecas, valor_comissao_mecanico\n",
        "            FROM\n",
        "                servicos\n",
        "            WHERE\n",
        "                id_mecanico = ?\"\"\",\n",
        "            (id_mecanico,)\n",
        "        )\n",
        "        servicos = cursor.fetchall()\n",
        "\n",
        "        servicos_formatados = []\n",
        "        if servicos:\n",
        "            for servico in servicos:\n",
        "                pecas_sugeridas_json = json.loads(servico[10]) if servico[10] and servico[10] != '{}' and servico[10] != '[]' else []\n",
        "                pecas_aprovadas_json = json.loads(servico[11]) if servico[11] and servico[11] != '{}' and servico[11] != '[]' else []\n",
        "                pecas_utilizadas_json = json.loads(servico[5]) if servico[5] and servico[5] != '{}' and servico[5] != '[]' else []\n",
        "\n",
        "                servico_dict = {\n",
        "                    \"id\": servico[0],\n",
        "                    \"carro_modelo\": servico[1],\n",
        "                    \"carro_placa\": servico[2],\n",
        "                    \"carro_ano\": servico[3],\n",
        "                    \"descricao_problema\": servico[4],\n",
        "                    \"pecas_utilizadas\": pecas_utilizadas_json,\n",
        "                    \"valor_total\": servico[6],\n",
        "                    \"comissao_mecanico_porcentagem\": servico[7],\n",
        "                    \"status_conserto\": servico[8],\n",
        "                    \"nf_obrigatoria\": servico[9],\n",
        "                    \"pecas_sugeridas_mecanico\": pecas_sugeridas_json,\n",
        "                    \"pecas_aprovadas_admin\": pecas_aprovadas_json,\n",
        "                    \"status_solicitacao_pecas\": servico[12],\n",
        "                    \"valor_comissao_mecanico\": servico[13] # Nova coluna adicionada\n",
        "                }\n",
        "                servicos_formatados.append(servico_dict)\n",
        "            print(f\"✅ Serviços encontrados para o mecânico ID {id_mecanico}.\")\n",
        "        else:\n",
        "            print(f\"ℹ️ Nenhum serviço encontrado para o mecânico ID {id_mecanico}.\")\n",
        "\n",
        "        return servicos_formatados\n",
        "    except sqlite3.Error as e:\n",
        "        print(f\"❌ Erro ao buscar serviços para o mecânico: {e}\")\n",
        "        return []\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "print(\"Função 'get_servicos_mecanico' atualizada para exibir detalhes de marca e valor da comissão.\")"
