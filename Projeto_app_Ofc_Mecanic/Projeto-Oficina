        "import json\n",
        "\n",
        "# Reusing id_mecanico_joao from previous execution\n",
        "# id_mecanico_joao = 1 # Assuming this ID is available from previous cells\n",
        "\n",
        "print(f\"\\n--- Exibindo serviços para o mecânico João Silva (ID: {id_mecanico_joao}) ---\")\n",
        "servicos_joao = get_servicos_mecanico(id_mecanico_joao)\n",
