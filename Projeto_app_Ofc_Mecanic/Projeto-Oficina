    {
      "cell_type": "code",
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "51939c8f",
        "outputId": "2d4a5540-6349-45f1-f22d-399a0af39122"
      },
      "source": [
        "import sqlite3\n",
        "import json\n",
        "import hashlib\n",
        "\n",
        "def conectar():\n",
        "    \"\"\"Função para conectar ao banco de dados.\"\"\"\n",
        "    return sqlite3.connect('oficina_mecanica.db')\n",
        "\n",
        "def registar_servico(carro_modelo, carro_placa, carro_ano, descricao_problema, id_mecanico):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    try:\n",
        "        cursor.execute('''\n",
        "            INSERT INTO servicos (\n",
        "                carro_modelo, carro_placa, carro_ano, descricao_problema, id_mecanico,\n",
        "                status_conserto, nf_obrigatoria, pecas_utilizadas, valor_total,\n",
        "                comissao_mecanico_porcentagem, pecas_sugeridas_mecanico, pecas_aprovadas_admin,\n",
        "                status_solicitacao_pecas\n",
        "            ) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)\n",
        "        ''', (\n",
        "            carro_modelo, carro_placa, carro_ano, descricao_problema, id_mecanico,\n",
        "            'Pendente', 1, json.dumps([]), 0.0, 0.0, json.dumps({}), json.dumps({}), 'Pendente'\n",
        "        ))\n",
        "        conn.commit()\n",
        "        print(f\"✅ Serviço para o veículo {carro_placa} registado com sucesso para o mecânico {id_mecanico}!\")\n",
        "        return cursor.lastrowid\n",
        "    except sqlite3.Error as e:\n",
        "        print(f\"❌ Erro ao registar serviço: {e}\")\n",
        "        return None\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "def sugerir_pecas_mecanico(id_servico, id_mecanico, pecas_sugeridas):\n",
        "    \"\"\"\n",
        "    Permite ao mecânico registrar as peças sugeridas para um serviço.\n",
        "    Atualiza 'pecas_sugeridas_mecanico' e define 'status_solicitacao_pecas' como 'Pendente'.\n",
        "\n",
        "    Args:\n",
        "        id_servico (int): O ID do serviço.\n",
        "        id_mecanico (int): O ID do mecânico que está sugerindo as peças.\n",
        "        pecas_sugeridas (list): Uma lista de dicionários com 'peca' e 'quantidade',\n",
        "                                 ex: [{'peca': 'Oleo do motor', 'quantidade': 4}].\n",
        "    \"\"\"\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "\n",
        "    try:\n",
        "        cursor.execute(\"SELECT id_mecanico, status_solicitacao_pecas FROM servicos WHERE id = ?\", (id_servico,))\n",
        "        resultado_servico = cursor.fetchone()\n",
        "\n",
        "        if not resultado_servico:\n",
        "            print(f\"❌ Erro: Serviço com ID {id_servico} não encontrado.\")\n",
        "            return False\n",
        "\n",
        "        mecanico_responsavel_id = resultado_servico[0]\n",
        "        current_status_solicitacao = resultado_servico[1]\n",
        "\n",
        "        if mecanico_responsavel_id != id_mecanico:\n",
        "            print(f\"❌ Erro: Mecânico com ID {id_mecanico} não é o responsável pelo serviço {id_servico}.\")\n",
        "            return False\n",
        "\n",
        "        # Check if the status allows for new suggestions\n",
        "        if current_status_solicitacao != 'Pendente':\n",
        "            print(f\"❌ Erro: Não é possível sugerir peças para o serviço {id_servico}. O status da solicitação é '{current_status_solicitacao}'.\")\n",
        "            return False\n",
        "\n",
        "        pecas_sugeridas_json = json.dumps(pecas_sugeridas)\n",
        "\n",
        "        cursor.execute(\n",
        "            \"UPDATE servicos SET pecas_sugeridas_mecanico = ?, status_solicitacao_pecas = ? WHERE id = ?\",\n",
        "            (pecas_sugeridas_json, 'Pendente', id_servico)\n",
        "        )\n",
        "        conn.commit()\n",
        "        print(f\"✅ Peças sugeridas para o serviço {id_servico} registradas/atualizadas com sucesso. Status: Pendente.\")\n",
        "        return True\n",
        "\n",
        "    except sqlite3.Error as e:\n",
        "        print(f\"❌ Erro ao sugerir peças: {e}\")\n",
        "        return False\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "def verificar_servico(id_servico):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    cursor.execute(\"SELECT * FROM servicos WHERE id = ?\", (id_servico,))\n",
        "    result = cursor.fetchone()\n",
        "    conn.close()\n",
        "    if result:\n",
        "        print(f\"Detalhes do Serviço {id_servico}: {result}\")\n",
        "        return result\n",
        "    else:\n",
        "        print(f\"Serviço com ID {id_servico} não encontrado.\")\n",
        "        return None\n",
        "\n",
        "\n",
        "# Reusing id_mecanico_joao from previous execution\n",
        "# id_mecanico_joao = 1\n",
        "\n",
        "# 5. Tente usar a função sugerir_pecas_mecanico novamente para o id_servico_exemplo com uma nova lista de peças\n",
        "#    Demonstrando que o mecânico pode ajustar suas sugestões enquanto o status da solicitação estiver 'Pendente'.\n",
        "\n",
        "print(\"\\n--- Demonstrando ajuste de sugestão de peças pelo mecânico (Status Pendente) ---\")\n",
        "\n",
        "# 5.1 Registrar um NOVO serviço atribuído ao mecânico João Silva\n",
        "id_servico_novo = registar_servico(\n",
        "    carro_modelo=\"Honda Civic\",\n",
        "    carro_placa=\"XY-34-WZ\",\n",
        "    carro_ano=\"2020\",\n",
        "    descricao_problema=\"Troca de óleo e filtros\",\n",
        "    id_mecanico=id_mecanico_joao\n",
        ")\n",
        "\n",
        "if id_servico_novo:\n",
        "    # 5.2 Primeira sugestão de peças para o novo serviço\n",
        "    primeira_sugestao = [\n",
        "        {'peca': 'Oleo do motor', 'quantidade': 4},\n",
        "        {'peca': 'Filtro de oleo', 'quantidade': 1}\n",
        "    ]\n",
        "    print(f\"\\n--- Fazendo a primeira sugestão para o Serviço ID: {id_servico_novo} ---\")\n",
        "    sucesso_primeira_sugestao = sugerir_pecas_mecanico(\n",
        "        id_servico=id_servico_novo,\n",
        "        id_mecanico=id_mecanico_joao,\n",
        "        pecas_sugeridas=primeira_sugestao\n",
        "    )\n",
        "\n",
        "    if sucesso_primeira_sugestao:\n",
        "        print(\"\\n--- Verificando o serviço após a primeira sugestão ---\")\n",
        "        verificar_servico(id_servico_novo)\n",
        "\n",
        "        # 5.3 Segunda sugestão de peças (ajuste) para o mesmo serviço, enquanto ainda está 'Pendente'\n",
        "        segunda_sugestao = [\n",
        "            {'peca': 'Oleo do motor', 'quantidade': 4},\n",
        "            {'peca': 'Filtro de oleo', 'quantidade': 1},\n",
        "            {'peca': 'Filtro de ar', 'quantidade': 1} # Adicionando um filtro de ar\n",
        "        ]\n",
        "        print(f\"\\n--- Fazendo a segunda sugestão (ajuste) para o Serviço ID: {id_servico_novo} ---\")\n",
        "        sucesso_segunda_sugestao = sugerir_pecas_mecanico(\n",
        "            id_servico=id_servico_novo,\n",
        "            id_mecanico=id_mecanico_joao,\n",
        "            pecas_sugeridas=segunda_sugestao\n",
        "        )\n",
        "\n",
        "        if sucesso_segunda_sugestao:\n",
        "            # 6. Verifique o serviço novamente para confirmar a atualização das sugestões de peças.\n",
        "            print(\"\\n--- Verificando o serviço após a segunda sugestão (ajuste) ---\")\n",
        "            verificar_servico(id_servico_novo)\n",
        "        else:\n",
        "            print(\"❌ A segunda sugestão de peças falhou (isso não deveria acontecer se o status é Pendente).\")\n",
        "    else:\n",
        "        print(\"❌ A primeira sugestão de peças falhou.\")\n",
        "else:\n",
        "    print(\"❌ Não foi possível registrar o novo serviço para a demonstração.\")"
      ],
