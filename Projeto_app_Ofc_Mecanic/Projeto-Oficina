      "source": [
        "import pandas as pd\n",
        "import sqlite3\n",
        "import os\n",
        "\n",
        "# 1. Remover o banco de dados existente\n",
        "if os.path.exists('oficina_mecanica.db'):\n",
        "    os.remove('oficina_mecanica.db')\n",
        "    print(\"Banco de dados existente removido.\")\n",
        "\n",
        "# 2. Conectando a um novo banco de dados (será criado um arquivo .db no seu Google Colab)\n",
        "conn = sqlite3.connect('oficina_mecanica.db')\n",
        "cursor = conn.cursor()\n",
        "\n",
        "# 3. Recriar a Tabela de Usuários\n",
        "cursor.execute('''\n",
        "CREATE TABLE IF NOT EXISTS usuarios (\n",
        "    id INTEGER PRIMARY KEY AUTOINCREMENT,\n",
        "    nome TEXT NOT NULL,\n",
        "    cargo TEXT,\n",
        "    email TEXT UNIQUE,\n",
        "    telefone TEXT,\n",
        "    endereco TEXT,\n",
        "    anos_experiencia INTEGER,\n",
        "    especializacoes TEXT, -- Aqui guardaremos múltiplas especializações separadas por vírgula\n",
        "    senha_hash TEXT,\n",
        "    nivel_acesso TEXT, -- 'Admin', 'Gerente', 'Mecanico'\n",
        "    perm_toggle_nf BOOLEAN DEFAULT 0, -- 0 = Proibido, 1 = Permitido (Apenas Admin altera)\n",
        "    permissoes_json TEXT -- Adicionada a coluna para armazenar as permissões como JSON\n",
        ")\n",
        "''')\n",
        "\n",
        "# 4. Recriar a Tabela de Estoque\n",
        "cursor.execute('''\n",
        "CREATE TABLE IF NOT EXISTS estoque (\n",
        "    id INTEGER PRIMARY KEY AUTOINCREMENT,\n",
        "    peca TEXT NOT NULL,\n",
        "    quantidade INTEGER,\n",
        "    quantidade_minima INTEGER, -- Alerta de 'Margem Vermelha'\n",
        "    valor_compra REAL,\n",
        "    fornecedor_melhor_preco TEXT,\n",
        "    prazo_entrega_medio TEXT\n",
        ")\n",
        "''')\n",
        "\n",
        "# 5. Recriar a Tabela de Serviços com a nova coluna valor_comissao_mecanico\n",
        "cursor.execute('''\n",
        "CREATE TABLE IF NOT EXISTS ordens_servico (\n",
        "    id INTEGER PRIMARY KEY AUTOINCREMENT,\n",
        "    carro_modelo TEXT,\n",
        "    carro_placa TEXT,\n",
        "    carro_ano TEXT,\n",
        "    descricao_problema TEXT,\n",
        "    pecas_utilizadas TEXT,\n",
        "    valor_total REAL,\n",
        "    comissao_mecanico_porcentagem REAL,\n",
        "    id_mecanico INTEGER,\n",
        "    status_conserto TEXT DEFAULT 'Pendente', -- 'Pendente', 'Concluído'\n",
        "    nf_obrigatoria BOOLEAN DEFAULT 1,\n",
        "    pecas_sugeridas_mecanico TEXT, -- Sugestões do mecânico (JSON de peças, quantidades e marcas sugeridas)\n",
        "    pecas_aprovadas_admin TEXT,    -- Peças aprovadas pelo administrador (JSON de peças, quantidades e marca final)\n",
        "    status_solicitacao_pecas TEXT DEFAULT 'Pendente', -- 'Pendente', 'Aprovado', 'Rejeitado'\n",
        "    valor_comissao_mecanico REAL, -- Nova coluna para armazenar o valor calculado da comissão\n",
        "    FOREIGN KEY(id_mecanico) REFERENCES usuarios(id)\n",
        ")\n",
        "''')\n",
        "\n",
        "# 6. Confirmar as alterações e fechar a conexão\n",
        "conn.commit()\n",
        "conn.close()\n",
        "print(\"Estrutura de Banco de Dados recriada com sucesso, incluindo a nova coluna 'valor_comissao_mecanico' na tabela 'servicos'!\")"
      ],
