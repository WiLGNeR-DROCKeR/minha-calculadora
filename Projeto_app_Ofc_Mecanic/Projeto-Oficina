        "import sqlite3\n",
        "import json\n",
        "\n",
        "def conectar():\n",
        "    \"\"\"Função para conectar ao banco de dados.\"\"\"\n",
        "    return sqlite3.connect('oficina_mecanica.db')\n",
        "\n",
        "def get_solicitacoes_pecas_pendentes():\n",
        "    \"\"\"\n",
        "    Retorna uma lista de ordens de serviço com status_solicitacao_pecas 'Pendente',\n",
        "    incluindo detalhes como ID da ordem de serviço, modelo do carro, problema e peças sugeridas, com detalhes de marca.\n",
        "\n",
        "    Returns:\n",
        "        list: Uma lista de dicionários, onde cada dicionário representa uma ordem de serviço com solicitação pendente.\n",
        "              Retorna uma lista vazia se nenhuma solicitação pendente for encontrada.\n",
        "    \"\"\"\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    try:\n",
        "        cursor.execute(\n",
        "            \"\"\"SELECT\n",
        "                id, carro_modelo, carro_placa, descricao_problema, pecas_sugeridas_mecanico, id_mecanico\n",
        "            FROM\n",
        "                ordens_servico\n",
        "            WHERE\n",
        "                status_solicitacao_pecas = 'Pendente'\"\"\"\n",
        "        )\n",
        "        solicitacoes_pendentes = cursor.fetchall()\n",
        "\n",
        "        servicos_formatados = []\n",
        "        if solicitacoes_pendentes:\n",
        "            for servico in solicitacoes_pendentes:\n",
        "                pecas_sugeridas_json = json.loads(servico[4]) if servico[4] and servico[4] != '{}' and servico[4] != '[]' else []\n",
        "\n",
        "                servico_dict = {\n",
        "                    \"id_servico\": servico[0],\n",
        "                    \"carro_modelo\": servico[1],\n",
        "                    \"carro_placa\": servico[2],\n",
        "                    \"descricao_problema\": servico[3],\n",
        "                    \"pecas_sugeridas_mecanico\": pecas_sugeridas_json,\n",
        "                    \"id_mecanico\": servico[5]\n",
        "                }\n",
        "                servicos_formatados.append(servico_dict)\n",
        "            print(f\"✅ {len(servicos_formatados)} solicitações de peças pendentes encontradas para ordens de serviço.\")\n",
        "        else:\n",
        "            print(\"ℹ️ Nenhuma solicitação de peças pendente encontrada para ordens de serviço.\")\n",
        "\n",
        "        return servicos_formatados\n",
        "    except sqlite3.Error as e:\n",
        "        print(f\"❌ Erro ao buscar solicitações de peças pendentes para ordens de serviço: {e}\")\n",
        "        return []\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "print(\"Função 'get_solicitacoes_pecas_pendentes' atualizada para 'ordens_servico' e para exibir detalhes de marca.\")\n"
