        "        {'peca': 'Pastilha de Freio Dianteira', 'quantidade': 1, 'marcas_sugeridas': ['Bosch', 'Cofap', 'TRW']},\n",
        "        {'peca': 'Filtro de Óleo', 'quantidade': 1, 'marcas_sugeridas': ['Mann Filter', 'Fram']},\n",
        "        {'peca': 'Óleo de Motor 5W-40', 'quantidade': 4, 'marcas_sugeridas': ['Castrol', 'Mobil']}\n",
        "    ]\n",
        "\n",
        "    print(f\"\\n--- Mecânico {id_mecanico_joao} sugerindo peças para a Ordem de Serviço ID: {id_servico_demonstracao} ---\")\n",
        "    sucesso_sugestao = sugerir_pecas_mecanico(\n",
        "        id_servico=id_servico_demonstracao,\n",
        "        id_mecanico=id_mecanico_joao,\n",
        "        pecas_sugeridas=pecas_sugeridas_para_demonstracao\n",
        "    )\n",
        "\n",
        "    if sucesso_sugestao:\n",
        "        # 5. O mecânico deve visualizar seus serviços para confirmar que as sugestões de peças, incluindo as marcas, foram registradas.\n",
        "        print(f\"\\n--- Mecânico {id_mecanico_joao} visualiza suas Ordens de Serviço ---\")\n",
        "        servicos_joao = get_servicos_mecanico(id_mecanico_joao)\n",
        "\n",
        "        if servicos_joao:\n",
        "            for servico in servicos_joao:\n",
        "                if servico['id'] == id_servico_demonstracao:\n",
        "                    print(f\"Detalhes da Ordem de Serviço ID: {servico['id']}\")\n",
        "                    print(f\"  Carro: {servico['carro_modelo']} ({servico['carro_placa']})\")\n",
        "                    print(f\"  Problema: {servico['descricao_problema']}\")\n",
        "                    print(f\"  Status da Solicitação de Peças: {servico['status_solicitacao_pecas']}\")\n",
        "                    print(f\"  Peças Sugeridas pelo Mecânico: \")\n",
        "                    if servico['pecas_sugeridas_mecanico']:\n",
        "                        for peca in servico['pecas_sugeridas_mecanico']:\n",
        "                            marcas_sugeridas = peca.get('marcas_sugeridas', 'N/A')\n",
        "                            print(f\"    - {peca['peca']} (Qtd: {peca['quantidade']}), Marcas Sugeridas: {marcas_sugeridas}\")\n",
        "                    else:\n",
        "                        print(\"    Nenhuma peça sugerida.\")\n",
        "                    print(\"--------------------------------------------------\")\n",
        "        else:\n",
        "            print(f\"Nenhuma ordem de serviço encontrada para o mecânico ID {id_mecanico_joao}.\")\n",
        "\n",
        "        # 6. O administrador deve visualizar as solicitações de peças pendentes\n",
