      "source": [
        "import pandas as pd\n",
        "import sqlite3\n",
        "import os\n",
        "\n",
        "# Remove o banco de dados existente para recriar a tabela com a nova coluna\n",
        "if os.path.exists('oficina_mecanica.db'):\n",
        "    os.remove('oficina_mecanica.db')\n",
        "\n",
        "# Conectando ao banco de dados (será criado um arquivo .db no seu Google Colab)\n",
        "conn = sqlite3.connect('oficina_mecanica.db')\n",
        "cursor = conn.cursor()\n",
        "\n",
        "# 1. Tabela de Usuários (Mecânicos, Gerentes, Admin)\n",
        "# Sem limites de caracteres nos campos de texto\n",
        "cursor.execute('''\n",
        "CREATE TABLE IF NOT EXISTS usuarios (\n",
        "    id INTEGER PRIMARY KEY AUTOINCREMENT,\n",
        "    nome TEXT NOT NULL,\n",
        "    cargo TEXT,\n",
        "    email TEXT UNIQUE,\n",
        "    telefone TEXT,\n",
        "    endereco TEXT,\n",
        "    anos_experiencia INTEGER,\n",
        "    especializacoes TEXT, -- Aqui guardaremos múltiplas especializações separadas por vírgula\n",
        "    senha_hash TEXT,\n",
        "    nivel_acesso TEXT, -- 'Admin', 'Gerente', 'Mecanico'\n",
        "    perm_toggle_nf BOOLEAN DEFAULT 0, -- 0 = Proibido, 1 = Permitido (Apenas Admin altera)\n",
        "    permissoes_json TEXT -- Adicionada a coluna para armazenar as permissões como JSON\n",
        ")\n",
        "''')\n",
        "\n",
        "# 2. Tabela de Estoque (Com Margem Vermelha)\n",
        "cursor.execute('''\n",
        "CREATE TABLE IF NOT EXISTS estoque (\n",
        "    id INTEGER PRIMARY KEY AUTOINCREMENT,\n",
        "    peca TEXT NOT NULL,\n",
        "    quantidade INTEGER,\n",
        "    quantidade_minima INTEGER, -- Alerta de 'Margem Vermelha'\n",
        "    valor_compra REAL,\n",
        "    fornecedor_melhor_preco TEXT,\n",
        "    prazo_entrega_medio TEXT\n",
        ")\n",
        "''')\n",
        "\n",
        "# 3. Tabela de Serviços (Com Controle Fiscal)\n",
        "cursor.execute('''\n",
        "CREATE TABLE IF NOT EXISTS servicos (\n",
        "    id INTEGER PRIMARY KEY AUTOINCREMENT,\n",
        "    carro_modelo TEXT,\n",
        "    carro_placa TEXT,\n",
        "    carro_ano TEXT,\n",
        "    descricao_problema TEXT,\n",
        "    pecas_utilizadas TEXT,\n",
        "    valor_total REAL,\n",
        "    comissao_mecanico_porcentagem REAL,\n",
        "    id_mecanico INTEGER,\n",
        "    status_conserto TEXT, -- 'Pendente' ou 'Concluído'\n",
        "    nf_obrigatoria BOOLEAN DEFAULT 1, -- O que você pediu\n",
        "    pecas_sugeridas_mecanico TEXT, -- Nova coluna\n",
        "    pecas_aprovadas_admin TEXT,   -- Nova coluna\n",
        "    status_solicitacao_pecas TEXT, -- Nova coluna: 'Pendente', 'Aprovado', 'Rejeitado'\n",
        "    FOREIGN KEY(id_mecanico) REFERENCES usuarios(id)\n",
        ")\n",
        "''')\n",
        "\n",
        "conn.commit()\n",
        "conn.close()\n",
        "print(\"Estrutura de Banco de Dados criada com sucesso, com novas colunas na tabela 'servicos'!\")"
