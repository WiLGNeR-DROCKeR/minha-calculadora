    {
      "cell_type": "code",
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "4af3f4b0",
        "outputId": "b99f65d7-a76b-4d5a-f7ae-593bb9dcfcc9"
      },
      "source": [
        "import sqlite3\n",
        "import json\n",
        "import hashlib\n",
        "\n",
        "def conectar():\n",
        "    \"\"\"Função para conectar ao banco de dados.\"\"\"\n",
        "    return sqlite3.connect('oficina_mecanica.db')\n",
        "\n",
        "def registar_colaborador(nome, cargo, especializacoes, email, telefone, endereco, experiencia, nivel, permissoes_admin):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "\n",
        "    senha_padrao = hashlib.sha256(f\"{nome}123\".encode()).hexdigest()\n",
        "    especializacoes_json = json.dumps(especializacoes)\n",
        "    permissoes_json = json.dumps(permissoes_admin)\n",
        "\n",
        "    try:\n",
        "        cursor.execute('''\n",
        "            INSERT INTO usuarios (\n",
        "                nome, cargo, especializacoes, email, telefone, endereco,\n",
        "                anos_experiencia, senha_hash, nivel_acesso, permissoes_json\n",
        "            ) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?)\n",
        "        ''', (nome, cargo, especializacoes_json, email, telefone, endereco,\n",
        "              experiencia, senha_padrao, nivel, permissoes_json))\n",
        "\n",
        "        conn.commit()\n",
        "        print(f\"✅ Colaborador {nome} registado com sucesso como {nivel}!\")\n",
        "        return cursor.lastrowid # Return the ID of the newly inserted user\n",
        "    except sqlite3.IntegrityError:\n",
        "        print(f\"❌ Erro: Este email '{email}' já está registado no sistema. Recuperando ID existente.\")\n",
        "        cursor.execute(\"SELECT id FROM usuarios WHERE email = ?\", (email,))\n",
        "        return cursor.fetchone()[0]\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "def registar_servico(carro_modelo, carro_placa, carro_ano, descricao_problema, id_mecanico):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    try:\n",
        "        cursor.execute('''\n",
        "            INSERT INTO ordens_servico (\n",
        "                carro_modelo, carro_placa, carro_ano, descricao_problema, id_mecanico,\n",
        "                status_conserto, nf_obrigatoria, pecas_utilizadas, valor_total,\n",
        "                comissao_mecanico_porcentagem, pecas_sugeridas_mecanico, pecas_aprovadas_admin,\n",
        "                status_solicitacao_pecas, valor_comissao_mecanico\n",
        "            ) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)\n",
        "        ''', (\n",
        "            carro_modelo, carro_placa, carro_ano, descricao_problema, id_mecanico,\n",
        "            'Pendente', 1, json.dumps([]), 0.0, 0.0, json.dumps([]), json.dumps([]), 'Pendente', 0.0\n",
        "        ))\n",
        "        conn.commit()\n",
        "        print(f\"✅ Ordem de serviço para o veículo {carro_placa} registada com sucesso para o mecânico {id_mecanico}!\")\n",
        "        return cursor.lastrowid\n",
        "    except sqlite3.Error as e:\n",
        "        print(f\"❌ Erro ao registar ordem de serviço: {e}\")\n",
        "        return None\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "def sugerir_pecas_mecanico(id_servico, id_mecanico, pecas_sugeridas):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "\n",
        "    try:\n",
        "        cursor.execute(\"SELECT id_mecanico, status_solicitacao_pecas FROM ordens_servico WHERE id = ?\", (id_servico,))\n",
        "        resultado_servico = cursor.fetchone()\n",
        "\n",
        "        if not resultado_servico:\n",
        "            print(f\"❌ Erro: Ordem de serviço com ID {id_servico} não encontrada.\")\n",
        "            return False\n",
        "\n",
        "        mecanico_responsavel_id = resultado_servico[0]\n",
        "        current_status_solicitacao = resultado_servico[1]\n",
        "\n",
        "        if mecanico_responsavel_id != id_mecanico:\n",
        "            print(f\"❌ Erro: Mecânico com ID {id_mecanico} não é o responsável pela ordem de serviço {id_servico}.\")\n",
        "            return False\n",
        "\n",
        "        if current_status_solicitacao != 'Pendente':\n",
        "            print(f\"❌ Erro: Não é possível sugerir peças para a ordem de serviço {id_servico}. O status da solicitação é '{current_status_solicitacao}'.\")\n",
        "            return False\n",
        "\n",
        "        pecas_sugeridas_json = json.dumps(pecas_sugeridas)\n",
        "\n",
        "        cursor.execute(\n",
        "            \"UPDATE ordens_servico SET pecas_sugeridas_mecanico = ?, status_solicitacao_pecas = ? WHERE id = ?\",\n",
        "            (pecas_sugeridas_json, 'Pendente', id_servico)\n",
        "        )\n",
        "        conn.commit()\n",
        "        print(f\"✅ Peças sugeridas para a ordem de serviço {id_servico} registradas/atualizadas com sucesso. Status: Pendente.\")\n",
        "        return True\n",
        "\n",
        "    except sqlite3.Error as e:\n",
        "        print(f\"❌ Erro ao sugerir peças: {e}\")\n",
        "        return False\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "def aprovar_rejeitar_pecas_admin(id_servico, id_admin, status, pecas_aprovadas=None, valor_total_servico=None, comissao_mecanico_porcentagem=None):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "\n",
        "    try:\n",
        "        cursor.execute(\"SELECT nivel_acesso FROM usuarios WHERE id = ?\", (id_admin,))\n",
        "        admin_nivel_acesso = cursor.fetchone()\n",
        "\n",
        "        if not admin_nivel_acesso or admin_nivel_acesso[0] != 'Admin':\n",
        "            print(f\"❌ Erro: Usuário com ID {id_admin} não tem permissão de Administrador para esta ação.\")\n",
        "            return False\n",
        "\n",
        "        cursor.execute(\"SELECT pecas_sugeridas_mecanico, status_solicitacao_pecas FROM ordens_servico WHERE id = ?\", (id_servico,))\n",
        "        resultado_servico = cursor.fetchone()\n",
        "\n",
        "        if not resultado_servico:\n",
        "            print(f\"❌ Erro: Ordem de serviço com ID {id_servico} não encontrada.\")\n",
        "            return False\n",
        "\n",
        "        pecas_sugeridas_json = resultado_servico[0]\n",
        "        current_status_solicitacao = resultado_servico[1]\n",
        "\n",
        "        if not pecas_sugeridas_json or pecas_sugeridas_json == '{}' or pecas_sugeridas_json == '[]':\n",
        "            print(f\"⚠️ Aviso: Não há peças sugeridas para a ordem de serviço {id_servico}.\")\n",
        "            if status == 'Aprovado' and (not pecas_aprovadas or pecas_aprovadas == '[]'):\n",
        "                print(\"❌ Erro: Não é possível aprovar peças quando nenhuma foi sugerida e nenhuma peça aprovada foi fornecida.\")\n",
        "                return False\n",
        "            elif current_status_solicitacao != 'Pendente' and status != current_status_solicitacao:\n",
        "                print(f\"⚠️ Aviso: O status da solicitação já é '{current_status_solicitacao}'. Ignorando a mudança para '{status}'.\")\n",
        "                return True\n",
        "        else:\n",
        "            sugeridas_mecanico = json.loads(pecas_sugeridas_json)\n",
        "            print(f\"ℹ️ Peças sugeridas pelo mecânico para a ordem de serviço {id_servico}: {sugeridas_mecanico}\")\n",
        "\n",
        "        if status == 'Aprovado':\n",
        "            if not pecas_aprovadas or not isinstance(pecas_aprovadas, list):\n",
        "                print(\"❌ Erro: 'pecas_aprovadas' deve ser uma lista não vazia para aprovação.\")\n",
        "                return False\n",
        "\n",
        "            for peca_info in pecas_aprovadas:\n",
        "                if 'peca' not in peca_info or 'quantidade' not in peca_info or 'marca_aprovada' not in peca_info:\n",
        "                    print(f\"❌ Erro: Cada item em 'pecas_aprovadas' deve conter 'peca', 'quantidade' e 'marca_aprovada'. Item inválido: {peca_info}\")\n",
        "                    return False\n",
        "\n",
        "            if valor_total_servico is None or comissao_mecanico_porcentagem is None:\n",
        "                print(\"❌ Erro: 'valor_total_servico' e 'comissao_mecanico_porcentagem' são obrigatórios ao aprovar peças.\")\n",
        "                return False\n",
        "\n",
        "            valor_comissao_mecanico = valor_total_servico * (comissao_mecanico_porcentagem / 100)\n",
        "            pecas_aprovadas_json = json.dumps(pecas_aprovadas)\n",
        "\n",
        "            cursor.execute(\n",
        "                \"UPDATE ordens_servico SET pecas_aprovadas_admin = ?, status_solicitacao_pecas = ?, valor_total = ?, comissao_mecanico_porcentagem = ?, valor_comissao_mecanico = ? WHERE id = ?\",\n",
        "                (pecas_aprovadas_json, 'Aprovado', valor_total_servico, comissao_mecanico_porcentagem, valor_comissao_mecanico, id_servico)\n",
        "            )\n",
        "            conn.commit()\n",
        "            print(f\"✅ Peças aprovadas para a ordem de serviço {id_servico} com sucesso. Status: Aprovado.\")\n",
        "            print(f\"   Valor Total do Serviço: R${valor_total_servico:.2f}\")\n",
        "            print(f\"   Comissão do Mecânico ({comissao_mecanico_porcentagem}%): R${valor_comissao_mecanico:.2f}\")\n",
        "            return True\n",
        "\n",
        "        elif status == 'Rejeitado':\n",
        "            cursor.execute(\n",
        "                \"UPDATE ordens_servico SET status_solicitacao_pecas = ? WHERE id = ?\",\n",
        "                ('Rejeitado', id_servico)\n",
        "            )\n",
        "            conn.commit()\n",
        "            print(f\"✅ Solicitação de peças para a ordem de serviço {id_servico} rejeitada com sucesso. Status: Rejeitado.\")\n",
        "            return True\n",
        "\n",
        "        else:\n",
        "            print(\"❌ Erro: O status deve ser 'Aprovado' ou 'Rejeitado'.\")\n",
        "            return False\n",
        "\n",
        "    except sqlite3.Error as e:\n",
        "        print(f\"❌ Erro ao processar solicitação de peças: {e}\")\n",
        "        return False\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "def verificar_servico(id_servico):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    cursor.execute(\"SELECT * FROM ordens_servico WHERE id = ?\", (id_servico,))\n",
        "    result = cursor.fetchone()\n",
        "    conn.close()\n",
        "    if result:\n",
        "        print(f\"Detalhes da Ordem de Serviço {id_servico}: {result}\")\n",
        "        return result\n",
        "    else:\n",
        "        print(f\"Ordem de Serviço com ID {id_servico} não encontrada.\")\n",
        "        return None\n",
        "\n",
        "\n",
        "# Reusing id_mecanico_joao and id_admin_maria from previous execution\n",
        "# Ensure these IDs are valid in the current database state\n",
        "\n",
