      "cell_type": "code",
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "72864ed2",
        "outputId": "441e7c7a-65f3-4ac2-a437-2d529cfee83a"
      },
      "source": [
        "import sqlite3\n",
        "import json\n",
        "\n",
        "def conectar():\n",
        "    return sqlite3.connect('oficina_mecanica.db')\n",
        "\n",
        "def verificar_permissoes_colaborador(nome_colaborador):\n",
        "    conn = conectar()\n",
        "    cursor = conn.cursor()\n",
        "    cursor.execute(\"SELECT permissoes_json FROM usuarios WHERE nome = ?\", (nome_colaborador,))\n",
        "    result = cursor.fetchone()\n",
        "    conn.close()\n",
        "\n",
        "    if result:\n",
        "        permissoes_json = result[0]\n",
        "        permissoes = json.loads(permissoes_json)\n",
        "        print(f\"Permissões para {nome_colaborador}:\")\n",
        "        for perm, status in permissoes.items():\n",
        "            print(f\"- {perm}: {status}\")\n",
        "    else:\n",
        "        print(f\"Colaborador {nome_colaborador} não encontrado.\")\n",
        "\n",
        "verificar_permissoes_colaborador(\"João Silva\")"
      ],
      "execution_count": 6,
      "outputs": [
        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
            "Permissões para João Silva:\n",
            "- pode_dispensar_nf: False\n",
            "- ver_lucro_empresa: False\n",
            "- editar_estoque: True\n",
            "- modificar_logo: False\n"
          ]
        }
      ]
